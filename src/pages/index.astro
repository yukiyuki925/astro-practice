---
import "../styles/global.css";
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import myImportedImage from "../image/19008624-8BB1-44A0-BF0E-C2FC30598E48.png";
import github from "../image/github (1).png";
import qiita from "../image/qiita.png";
---

<Layout>
  <html lang="en">
    <head>
      <meta charset="utf-8" />
      <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
      <meta name="viewport" content="width=device-width" />
      <meta name="generator" content={Astro.generator} />
      <title>index</title>
    </head>
    <body>
      <div class="container">
        <header>
          <h1>Profile</h1>
        </header>

        <main>
          <section class="profile">
            <div class="img">
              <Image
                src={myImportedImage}
                alt="profile-img"
                width="150"
                height="150"
                style={{ borderRadius: "50%" }}
              />
            </div>
            <div class="img-detail">
              <h3>熊谷勇希</h3>
              <p>
                岩手県出身。25歳。<br />
                未経験からエンジニアに転職し、SymfonyやLaravelを使ったPHPの案件に参画。<br
                />
                フロントエンドやPythonなどの他言語も現在学習中。
              </p>
            </div>
          </section>

          <section class="skills">
            <h2>Skills</h2>
            <div class="skill" style="--percent: 60%">
              <div class="skill-name">PHP</div>
              <div class="skill-bar">
                <div class="skill-bar-fill"></div>
              </div>
            </div>
            <div class="skill" style="--percent: 60%">
              <div class="skill-name">Symfony</div>
              <div class="skill-bar">
                <div class="skill-bar-fill"></div>
              </div>
            </div>
            <div class="skill" style="--percent: 40%">
              <div class="skill-name">laravel</div>
              <div class="skill-bar">
                <div class="skill-bar-fill"></div>
              </div>
            </div>
            <div class="skill" style="--percent: 30%">
              <div class="skill-name">wordpress</div>
              <div class="skill-bar">
                <div class="skill-bar-fill"></div>
              </div>
            </div>
            <div class="skill" style="--percent: 30%">
              <div class="skill-name">javascript</div>
              <div class="skill-bar">
                <div class="skill-bar-fill"></div>
              </div>
            </div>
            <div class="skill" style="--percent: 60%">
              <div class="skill-name">git</div>
              <div class="skill-bar">
                <div class="skill-bar-fill"></div>
              </div>
            </div>
            <div class="skill" style="--percent: 30%">
              <div class="skill-name">docker</div>
              <div class="skill-bar">
                <div class="skill-bar-fill"></div>
              </div>
            </div>
            <div class="skill" style="--percent: 30%">
              <div class="skill-name">AWS</div>
              <div class="skill-bar">
                <div class="skill-bar-fill"></div>
              </div>
            </div>
            <div class="skill" style="--percent: 10%">
              <div class="skill-name">Python</div>
              <div class="skill-bar">
                <div class="skill-bar-fill"></div>
              </div>
            </div>
          </section>

          <section class="sns">
            <div class="sns-icon">
              <nav>
                <ul>
                  <li>
                    <h3>GitHub</h3>
                    <a
                      href="https://github.com/yukiyuki925"
                      target="_blank"
                      rel="noopener noreferrer"
                      ><Image
                        src={github}
                        alt="github-img"
                        width="90"
                        height="90"
                        style={{ margin: 0 }}
                      /></a
                    >
                  </li>
                  <li>
                    <h3>Qiita</h3>
                    <a
                      href="https://qiita.com/yukiyukikun"
                      target="_blank"
                      rel="noopener noreferrer"
                    >
                      <Image
                        src={qiita}
                        alt="qiita-img"
                        width="90"
                        height="90"
                        style={{ margin: 0 }}
                      /></a
                    >
                  </li>
                </ul>
              </nav>
            </div>
          </section>

          <script>
            import "../../scripts/menu.js";
          </script>
        </main>
      </div>
    </body>

    <style>
      .container {
        margin: 50px 0;
      }

      p {
        margin: 0;
      }

      header h1 {
        margin: 30px 0;
      }

      img {
        margin-top: 30px;
        text-align: center;
      }

      .sns h3 {
        text-align: center;
        margin-right: 7px;
      }

      nav ul {
        width: 100%;
        margin: 0 auto;
        display: flex;
        justify-content: space-around;
      }

      nav ul li {
        list-style: none;
      }

      nav ul li a {
        text-decoration: none;
      }

      .sns {
        margin-top: 40px;
      }

      .sns img:hover {
        opacity: 0.5;
      }

      .profile {
        display: flex;
        align-items: center;
        justify-content: space-between;
      }

      ul {
        padding: 0;
      }

      .skills {
        margin: 50px 0;
      }

      .skill {
        margin-bottom: 1rem;
      }

      .skill-name {
        margin-bottom: 4px;
        font-weight: bold;
      }

      .skill-bar {
        width: 100%;
        height: 14px;
        border: 2px solid #3d4852;
        background: #f3f4f6;
        border-radius: 4px;
        overflow: hidden;
      }

      .skill-bar-fill {
        height: 100%;
        width: var(--percent);
        background-color: #7b9ea8;
        transition: width 0.5s ease-in-out;
      }

      @media screen and (max-width: 635px) {
        .profile {
          flex-direction: column;
        }
      }
    </style>
  </html>
</Layout>
